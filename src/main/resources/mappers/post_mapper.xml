<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dbms_study.mapper.PostMapper">
    <insert id="addPost">
        insert into
        post_tb
        values (0, #{title}, #{content}, #{userId}, now(), null);
    </insert>

    <select id="getPostByPostId">
        select
        *
        from
        post_tb
        where
        post_id = #{postId}
    </select>

    <select id="getPostList">
        select
        *
        from
        post_tb
    </select>

    <update id="editPost">
        update
        post_tb
        set
        title = #{title},
        content = #{content},
        update_dt = now()
        where
        post_id = #{postId}
    </update>

    <delete id="removePost">
        delete from
        post_tb
        where
        post_id = #{postId}
    </delete>
</mapper>